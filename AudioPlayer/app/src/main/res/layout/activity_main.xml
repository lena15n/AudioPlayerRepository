<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_name_label_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/song_label_margin_start"
        android:layout_marginTop="@dimen/song_label_margin_top"
        android:textSize="@dimen/song_label_text_size"
        android:id="@+id/song_name_text_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_label_text"
        android:id="@+id/status_text_view"
        android:layout_marginTop="@dimen/status_label_margin_top"
        android:textSize="@dimen/status_label_text_size"
        android:layout_below="@+id/song_name_text_view"
        android:layout_alignStart="@+id/song_name_text_view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_button_text"
        android:id="@+id/play_button"
        android:textSize="@dimen/button_text_size"
        android:height="@dimen/button_height"
        android:width="@dimen/button_width"
        android:layout_below="@+id/status_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_margin_top"/>

</RelativeLayout>
